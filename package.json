{
  "name": "ccc",
  "version": "0.0.0",
  "workspaces": [
    "app/**/*",
    "config/**/*",
    "lib/**/*"
  ],
  "private": true,
  "dependencies": {
    "@types/node": "^16.6.1",
    "lerna": "^4.0.0"
  },
  "scripts": {
    "ts:version": "tsc -v",
    "bootstrap": "lerna bootstrap",
    "test:app": "lerna run test --scope ccc-bridge --stream",
    "test:nestjs-client": "lerna run test --scope @ccc/nestjs-client --stream",
    "build": "lerna run build --scope @ccc/nestjs-client --scope ccc-bridge --stream",
    "build:app": "lerna run build --scope ccc-bridge",
    "build:nestjs-client": "lerna run build --scope @ccc/nestjs-client",
    "docs:build": "lerna run docs:build --scope @ccc/nestjs-client --stream",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prepare": "husky install",
    "postinstall": "husky install",
    "tsc": "tsc -v",
    "lint-staged": "lint-staged --debug",
    "start:dev": "lerna run start:dev --scope ccc-bridge --stream",
    "start:prod": "lerna run start:prod --scope ccc-bridge --stream",
    "remove:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
  },
  "devDependencies": {
    "@ccc/eslint-config": "^0.0.0",
    "@ccc/prettier-config": "^0.0.0",
    "@ccc/typescript-config": "^0.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.2.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.jsx,.ts,.tsx --fix"
    ]
  }
}
